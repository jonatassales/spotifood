{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDirs": [
      "src",
      "tests"
    ],
    "paths": {
      "@project": [
        "src"
      ]
    },
    "types": [
      "react",
      "react-dom",
      "styled-components",
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "lib/**"
  ]
}